<%= simple_nested_form_for @student, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :barcode_number %>
  <%= f.input :household_id %>
  <%= f.input :is_male %>
  <%= f.input :grade %>
  <%= f.input :date_of_birth %>
  <%= f.input :cell_phone %>
  <%= f.input :can_text %>
  <%= f.input :photo %>
  <%= f.input :email %>
  <%= f.input :status %>
  
  <%= f.fields_for :registrations do |registration_form| %>
  <div class="field">
   <%= registration_form.association :section, :label_method => :name, :value_method => :id, :prompt => 'Choose a Section' %>
  </div>
  <%= registration_form.link_to_remove "Remove this registration" %>
<% end %>
<p><%= f.link_to_add "Add a registration", :registrations %></p>
 
  
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                students_path, :class => 'btn' %>
  </div>
<% end %>
