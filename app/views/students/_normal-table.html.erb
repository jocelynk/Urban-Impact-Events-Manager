<%- model_class = Student -%>

<table class="table table-striped">
    <thead>
        <tr>
            <th><%= model_class.human_attribute_name(:barcode_number) %></th>
            <th><%= model_class.human_attribute_name(:last_name) %></th>
            <th><%= model_class.human_attribute_name(:first_name) %></th>
            <th><%= model_class.human_attribute_name(:date_of_birth) %></th>
            <th><%= model_class.human_attribute_name(:cell_phone) %></th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
    </thead>
    <tbody>
        <% @students.each do |student| %>
        <tr>
            <td><%= link_to student.barcode_number, student_path(student) %></td>
            <td><%= student.last_name %></td>
            <td><%= student.first_name %></td>
            <td><%= student.date_of_birth %></td>
            <td><%= student.cell_phone %></td>
            <td>
                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_student_path(student), :class => 'btn btn-mini' %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<div class="digg_pagination">
    <div clas="page_info">
        <%= page_entries_info @students %>
    </div>
    <%= will_paginate @students, :container => true %>
</div>