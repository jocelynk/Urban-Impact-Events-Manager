<% if @recent_activities.nil? %>
<h2>No Recent Activities</h2>
<% else %>
<h2>Recent Activity</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= Student.human_attribute_name(:first_name) %></th>
      <th><%= Student.human_attribute_name(:last_name) %></th>
      <th><%= Student.human_attribute_name(:barcode_number) %></th>
    </tr>
  </thead>
  <tbody>
    <% @absentees.each do |student| %>
      <tr>
        <td><%= link_to student.first_name, student_path(student) %></td>
        <td><%= student.last_name %></td>
        <td><%= student.barcode_number %></td>     
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
