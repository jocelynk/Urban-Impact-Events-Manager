<%- model_class = Student -%>
<div class="container-fluid">
  <div class="row-fluid">
	<div class="span10">
		<div class="page-header">
  			<h1><%=t '.title', :default => model_class.model_name.human %></h1>
		</div>
<img src="http://placehold.it/140x140" class="img-polaroid">&nbsp;&nbsp;
<a class="btn btn-large" href="#"><i class="icon-music"></i></a>&nbsp;&nbsp;
<a class="btn btn-large" href="#"><i class="icon-film"></i></a>&nbsp;&nbsp;
<a class="btn btn-large" href="#"><i class="icon-book"></i></a>
<br><br><br>
		<dl class="dl-horizontal">
  			<dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
  			<dd><%= @student.first_name %></dd>
  			<dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
  			<dd><%= @student.last_name %></dd>
  			<dt><strong><%= model_class.human_attribute_name(:barcode_number) %>:</strong></dt>
  			<dd><%= @student.barcode_number %></dd>
  			<dt><strong><%= model_class.human_attribute_name(:household_id) %>:</strong></dt>
  			<dd><%= @student.household_id %></dd>
  			<dt><strong><%= model_class.human_attribute_name(:is_male) %>:</strong></dt>
  			<dd><%= @student.is_male %></dd>
  			<dt><strong><%= model_class.human_attribute_name(:grade) %>:</strong></dt>
  			<dd><%= @student.grade %></dd>
  			<dt><strong><%= model_class.human_attribute_name(:date_of_birth) %>:</strong></dt>
  			<dd><%= @student.date_of_birth %></dd>
  			<dt><strong><%= model_class.human_attribute_name(:cell_phone) %>:</strong></dt>
  			<dd><%= @student.cell_phone %></dd>
  			<dt><strong><%= model_class.human_attribute_name(:can_text) %>:</strong></dt>
  			<dd><%= @student.can_text %></dd>
  			<dt><strong><%= model_class.human_attribute_name(:photo) %>:</strong></dt>
  			<dd><%= @student.photo %></dd>
  			<dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  			<dd><%= @student.email %></dd>
  			<dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  			<dd><%= @student.status %></dd>
		</dl>


		<div class="form-actions">
  			<%= link_to t('.back', :default => t("helpers.links.back")),
              	students_path, :class => 'btn'  %>
  			<%= link_to t('.edit', :default => t("helpers.links.edit")),
              	edit_student_path(@student), :class => 'btn' %>
  			<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              	student_path(@student),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
		</div>
	</div>

	<div class="span2">
		<div id="studentSide">
<h3>Alerts</h3>
<div class="alert">
  <button type="button" class="close" data-dismiss="alert">×</button>
  <strong><%= @student.first_name %></strong> has to get a new barcode.
</div>
<div class="alert alert-error">
	  <button type="button" class="close" data-dismiss="alert">×</button>
	  <strong><%= @student.first_name %></strong> hasn't been to the past <strong>3</strong> events.
	</div>
	<div class="alert alert-info">
		 <button type="button" class="close" data-dismiss="alert">×</button>
		  <strong>Heads up!</strong> Jazz band will be moved to classroom <strong>E2300</strong>
		</div>
		</div>
	</div>

</div>
</div>
