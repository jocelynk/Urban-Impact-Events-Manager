<h2>Checkin</h2>
<p>Scanning...</p>
<%= @event_details.first.section %> - <%= @event_details.first.date %> 

    
    
    <div class="container">
    	<div id="alert" class="alert alert-success fade in">
					<a id="a" class="close" data-dismiss="alert">×</a>
					</div>
	  <% flash.each do |name, msg| %>
			<% if name == :notice %>
				<!-- Successful alerts haha -->
			  <%= msg %>
				</div>
			<% elsif name == :warning %>
				<!-- Error Alerts -->
				<div class="alert alert-error fade in">
					<a class="close" data-dismiss="alert">×</a>
					<%= msg %>
				</div>
			<% elsif name == :alert %>
				<!-- Error Alerts -->
				<div class="alert alert-error fade in">
					<a class="close" data-dismiss="alert">×</a>
					<%= msg %>
				</div>
			<% else %>
				<!-- Other alerts or alerts I don't know exist -->
				<div class="alert fade in" data=<%= name %>>
					<a class="close" data-dismiss="alert">×</a>
					<%= msg %>
				</div>
			<% end %>
	  <% end %>


	</div>
	
	
